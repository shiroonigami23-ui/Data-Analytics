name: Auto Update Site Content

on:
  push:
    paths:
      - "data/resources/**"

jobs:
  build-and-commit:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repo
      uses: actions/checkout@v3

    - name: Set up Python
      uses: actions/setup-python@v4
      with:
        python-version: "3.x"

    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install -r requirements.txt

    - name: Generate Content with AI
      env:
        # This now passes the secret named SHIROONI23
        SHIROONI23: ${{ secrets.SHIROONI23 }}
      run: |
        python update_site.py

    - name: Commit updated files
      run: |
        git config --global user.name "github-actions[bot]"
        git config --global user.email "github-actions[bot]@users.noreply.github.com"
        git add resources.json quiz.json topics.html resources.html || true
        git commit -m "Auto-update content with AI summaries & quizzes" || echo "No changes to commit"
        git push
