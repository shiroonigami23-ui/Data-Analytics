name: Auto Update Site

on:
  push:
    paths:
      - "data/resources/**"
      - "*.py"

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repo
      uses: actions/checkout@v3

    - name: Set up Python
      uses: actions/setup-python@v4
      with:
        python-version: "3.x"

    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install pillow PyPDF2 pdfminer.six PyYAML

    - name: Generate resources + quiz
      run: |
        python generate_resources.py
        python generate_quiz.py || echo "No quiz generator found"
        python update_site.py || echo "No site update script found"

    - name: Commit updated files
      run: |
        git config --global user.name "github-actions[bot]"
        git config --global user.email "github-actions[bot]@users.noreply.github.com"
        git add resources.json quiz.json resources.html index.html || true
        git commit -m "Auto-update resources & quizzes [skip ci]" || echo "No changes to commit"
        git push
